<% @users.each do |user| %>
  <tr>
    <td><%= user.first %></td>
    <td><%= user.surname %></td>
    <td><%= user.street %></td>
    <td><%= user.po_box %></td>
    <td><%= user.town %></td>
    <td><%= user.state %></td>
    <td><%= user.zip %></td>
    <td><%= user.email %></td>
    <td><%= user.status %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

